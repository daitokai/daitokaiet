.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle{ data: {target: '#navbar-collapse', toggle: 'collapse'}, type: 'button'}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to '#daitokaiet', '#', class: 'navbar-brand'

    #navbar-collapse.collapse.navbar-collapse
      = search_form_for User.all.search(params[:q]), url: api_v1_search_path, html: { class: 'navbar-form navbar-left', role: 'search' }, builder: SimpleForm::FormBuilder do |f|
        = f.input :name_cont, label: false, input_html: {class: 'form-control', placeholder: '友達を探す'}
        = hidden_field_tag :access_token, params[:access_token]
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to '記録する', new_api_v1_record_path(access_token: params[:access_token])
        %li
          = link_to 'みんなの記録', api_v1_social_path(access_token: params[:access_token])
        %li
          = link_to '目標設定', edit_api_v1_users_path(access_token: params[:access_token])
